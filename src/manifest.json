{
  "manifest_version": 2,
  "name": "These Uncertain Times",
  "author": "Will Harney",
  "__chrome__icons": {
    "32": "icons/icon-72.png",
    "48": "icons/icon-72.png",
    "96": "icons/icon-72.png"
  },
  "__firefox__icons": {
    "32": "icons/icon.svg",
    "48": "icons/icon.svg",
    "96": "icons/icon.svg"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content_script.js"],
      "all_frames": true
    }
  ],
  "options_ui": {
    "__chrome__chrome_style": true,
    "__firefox__browser_style": true,
    "page": "options/options.html"
  },
  "permissions": ["storage"]
}
